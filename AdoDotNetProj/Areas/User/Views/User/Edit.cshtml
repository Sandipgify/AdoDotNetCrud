@model User.EntityModels.Dto.UserDto

@{
    ViewData["Title"] = "Edit";
}


<hr />
<div class="row">
        <div class="offset-md-4 col-md-4">
            <div class="panel panel-Primary">
                <div class="panel-heading">
                    <h4 class="panel-title">Edit User</h4>
                </div>
                <div class="panel-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                       @* <input value="@ViewBag.Id" class="form-control" required hidden/>*@
                        <div class="form-group">
                            <input asp-for="FirstName" class="form-control" required placeholder="First Name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="LastName" class="form-control" required placeholder="Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ContactNo" class="form-control" required placeholder="Contact Number" />
                            <span asp-validation-for="ContactNo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" id="submit" class="btn btn-primary btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

   

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
