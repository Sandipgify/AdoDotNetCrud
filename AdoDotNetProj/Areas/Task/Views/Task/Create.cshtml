@model AdoDotNetProj.EntityModels.Dto.TaskDto

@{
    ViewData["Title"] = "Create Task";
}

<div class="row">
    <div class="offset-md-4 col-md-4">
        <form asp-action="Create">
            <h4>Create New Task</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required placeholder="Task Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" required placeholder="Description"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignTo" class="control-label"></label>
                @Html.DropDownListFor(model => model.AssignTo, new SelectList(ViewBag.userList, "Id", "FullName"), "--Select--", new {@class="form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
