@model IEnumerable<AdoDotNetProj.EntityModels.Dto.TaskDto>

@{
    ViewData["Title"] = "Index";
}

<h6>Search Task <small> Task Result Appear here</small></h6>
<hr/>
<form method="post">
    <div class="row">

        <div class="col-md-2">
            <div class="form-group">
                @Html.DropDownList("AssignedTo", new SelectList(ViewBag.userList, "Id", "FullName"), "--Select--", new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <button type="submit" class="btn btn-primary" >Search</button>
            </div>
        </div>

    </div>
</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CretedByName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignName)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CretedByName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    @Html.ActionLink("AssignTask", "AssignTask", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
